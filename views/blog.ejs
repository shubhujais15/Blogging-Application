<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('./partials/head') %>
    <title>Blog</title>
</head>
<body>
    <%- include('./partials/nav') %>
    
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= '/' + blog.coverImageURL %>"  alt="Cover Image" width="500px">
        <pre class="mt-3"><%= blog.body %></pre>
    </div>

    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageURL %>" alt="" width="50px">
        <%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-3">
        <h1>Comments (<%= comments.length %>)</h1>
        <!-- locals contains all variables as an object-->
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="POST">
                <div class="mb-3">
                    <input type="text" name="content" class="form-control" placeholder="Enter Your Comment">
                    <button type="submit" class="btn btn-sm btn-primary mt-2">Add</button>
                  </div>
            </form>
        <% } %>
        <div class="mt-3">
            <% comments.forEach(comment => { %>
                <div>
                   <img src="<%= comment.createdBy.profileImageURL %>" alt="" width="50px">
                   <%= comment.createdBy.fullName %>
                   <pre><%= comment.content %></pre>
                </div>
               <% }) %>
        </div>
    </div>
   
    <%- include('./partials/scripts') %>
</body>
</html>